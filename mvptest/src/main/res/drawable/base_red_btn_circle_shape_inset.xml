<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px">
    <selector>
        <item android:state_enabled="false">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/tv_btn_gray_color"
                    android:endColor="@color/tv_btn_gray_color"
                    android:startColor="@color/tv_btn_gray_color" />
                <corners android:radius="100dp" />
            </shape>
        </item>
        <item
            android:state_enabled="true"
            android:state_pressed="false">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/tv_btn_red_color"
                    android:endColor="@color/tv_btn_red_color"
                    android:startColor="@color/tv_btn_red_color" />
                <corners android:radius="100dp" />

            </shape>
        </item>
        <item
            android:state_enabled="true"
            android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/tv_btn_red_press_color"
                    android:endColor="@color/tv_btn_red_press_color"
                    android:startColor="@color/tv_btn_red_press_color" />
                <corners android:radius="100dp" />
            </shape>
        </item>

    </selector>
</inset>